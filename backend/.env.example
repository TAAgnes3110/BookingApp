# ============================================
# ENVIRONMENT
# ============================================
NODE_ENV=development

# ============================================
# APPLICATION
# ============================================
APP_NAME=BookingApp
APP_HOST=localhost
PORT=3000
API_VERSION=v1
API_PREFIX=/api
FRONTEND_URL=http://localhost:5173/

# ============================================
# DATABASE (PostgreSQL)
# ============================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=BookingApp
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here

# ============================================
# FIREBASE CONFIGURATION
# ============================================
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_PROJECT_NUMBER=your_project_number
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com/
FIREBASE_WEB_API_KEY=your_web_api_key

# Firebase Service Account
FIREBASE_PRIVATE_KEY_ID=your_private_key_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=your-service-account-email
FIREBASE_CLIENT_ID=your_client_id

# ============================================
# JWT AUTHENTICATION
# ============================================
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRY=1h
JWT_ACCESS_EXPIRATION_MINUTES=30
JWT_REFRESH_EXPIRATION_DAYS=30

# ============================================
# EMAIL CONFIGURATION (Gmail SMTP)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=no-reply@yourdomain.com
SMTP_SECURE=false

# ============================================
# OTP CONFIGURATION
# ============================================
OTP_LENGTH=6
OTP_EXPIRY=300
OTP_PROVIDER=email

# ============================================
# CACHE CONFIGURATION
# ============================================
CACHE_TTL=300
CACHE_CHECKPERIOD=120

# ============================================
# OAUTH CONFIGURATION
# ============================================
# Google
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/v1/auth/google/callback

# Facebook
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_CALLBACK_URL=http://localhost:3000/v1/auth/facebook/callback

# Github
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=http://localhost:3000/v1/auth/github/callback

# Session
SESSION_SECRET=your_session_secret

# ============================================
# PAYMENT & EXTERNAL SERVICES
# ============================================
# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# VNPay
VNPAY_TMN_CODE=your_vnpay_tmn_code
VNPAY_HASH_SECRET=your_vnpay_hash_secret
VNPAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
VNPAY_RETURN_URL=http://localhost:3000/v1/payment/vnpay/return

# ============================================
# SECURITY & LOGGING
# ============================================
# Cors
CORS_ORIGIN=*
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT=100
RATE_LIMIT_WINDOW=15

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined

# File Upload
UPLOAD_LIMIT=5mb
ALLOWED_FORMATS=jpg,jpeg,png,webp,pdf,epub
STORAGE_PATH=uploads/
